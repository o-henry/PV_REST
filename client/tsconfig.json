{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["DOM", "dom", "dom.iterable"],
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
